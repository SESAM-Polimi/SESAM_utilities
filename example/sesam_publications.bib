isbn = {9781728113562},
journal = {ICCEP 2019 - 7th International Conference on Clean Electrical Power: Renewable Energy Resources Impact},
keywords = {Distributed generation,energy storage,load matching,multi-energy systems,nearly zero energy,no grid interaction probability,smart districts},
pages = {246--252},
title = {{Modelling of An Integrated Multi-Energy System for A Nearly Zero Energy Smart District}},
volume = {0},
year = {2019}
