keywords = {Load evolution,Microgrid,Multi-step investment,Off-grid,Rural electrification},
pages = {16--29},
title = {{Long-term sizing of rural microgrids: Accounting for load evolution through multi-step investment plan and stochastic optimization}},
volume = {58},
year = {2020}
}
@article{Akrami2020c,
