doi = {10.1016/j.esr.2018.02.006},
file = {:C\:/Users/loren/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Riva et al. - 2018 - Long-term energy planning and demand forecast in remote areas of developing countries Classification of case studie.pdf:pdf},
issn = {2211467X},
journal = {Energy Strategy Reviews},
keywords = {Access to energy,Classification and analysis,Energy demand models,Energy modelling,Rural energy planning},
pages = {71--89},
publisher = {Elsevier Ltd},
title = {{Long-term energy planning and demand forecast in remote areas of developing countries: Classification of case studies and insights from a modelling perspective}},
volume = {20},
year = {2018}
}
