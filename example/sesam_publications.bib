journal = {Entropy},
keywords = {Flexibility,Natural gas combined cycle,Thermoeconomic input-output analysis},
number = {3},
title = {{Off-design modeling of Natural Gas Combined Cycle power plants: An order reduction by means of Thermoeconomic Input-Output Analysis}},
volume = {18},
