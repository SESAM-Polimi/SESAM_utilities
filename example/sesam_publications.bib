doi = {10.18280/mmc-c.790307},
file = {:C\:/Users/loren/Politecnico di Milano/DENG-SESAM - Documenti/GENERAL_Publications/Conference/2018_AIGE_Rocco,Rady,Colombo_draft.pdf:pdf},
