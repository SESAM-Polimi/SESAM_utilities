journal = {Energy for Sustainable Development},
keywords = {Access to electricity,E-cooking,Homer,LoadProGen,Optimisation,Tanzania},
pages = {78--88},
publisher = {International Energy Initiative},
title = {{Enabling combined access to electricity and clean cooking with PV-microgrids: new evidences from a high-resolution model of cooking loads}},
