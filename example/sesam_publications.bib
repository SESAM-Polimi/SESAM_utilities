keywords = {Exergy analysis,Input-output method,Malfunction decomposition,Thermoeconomic diagnosis},
number = {August 2017},
pages = {644--655},
publisher = {Elsevier},
title = {{Thermoeconomic diagnosis and malfunction decomposition: Methodology improvement of the Thermoeconomic Input-Output Analysis (TIOA)}},
